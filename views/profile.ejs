<!doctype html>
<html lang="ua">

<%-include ./partial/head.ejs%>

<body class="bg-dark" style="height: 100%">
    <div class="nizkiy-flex">
        <header>
            <%-include ./partial/nav.ejs%>
        </header>

        <main class="text-white about offset-sm-2 col-sm-8 offset-md-3 col-md-6 offset-lg-4 col-lg-4 align-middle">
            <div style="text-align:center">
                    <h1>Ваші квитки</h1>
                    <table class="table text-white">
                            <thead class="black  ">
                                <tr>
                                    <th>Дата</th>
                                    <th>Місто</th>
                                    <th>Місце</th>
                                </tr>
                            </thead>
                            <tbody id="paginationList">
                                <% for( ticket of tickets ) { %>
                                <tr>
                                    <th><%=ticket.date%></th>
                                    <td><%=ticket.city%></td>
                                    <td><%=ticket.name%></td>
                                </tr>
                                 <% } %>
                            </tbody>
                        </table>
            </div>
            <nav aria-label="Page navigation example">
  <div class="d-flex justify-content-between">
    <button type="button" id="prev" class="btn" disabled>Попередня</button>
    <p>page <label id="page"> <%=currPage%> </label> of <label id="maxpage"><%=maxPage%></label> </p>
    <%if(currPage==maxPage){ %>
    <button type="button" id="next" class="btn" disabled>Наступна</button>
   <% } else { %>
    <button type="button" id="next" class="btn" >Наступна</button>
    <% } %>
 </div>
</nav>
        </main>
    </div>

    <%-include ./partial/footer.ejs%>
    <script type="text/javascript" src="front-end/pagination.js"></script>
    <script type="text/javascript" src="front-end/ejs.js"></script>
    <%-include ./partial/scripts.ejs%>

</body>

</html>